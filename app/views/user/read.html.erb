
<div class="userpage">
  <div class="userpage__info">
    <div class="userpage__info__who">
      <img src="http://lorempixel.com/250/250/people/"
        width="250" height="250" alt="Vasily Pupkin"
        class="userpage__info__who__image"/>
      <div class="userpage__info__who__name">
        <%= @user.name %>

        <% if current_user == @user or current_user.admin? %>
        <%= link_to action: :update, id: @user.id do %>
          <span class="fa fa-pencil"></span>
          Edit
        <% end %>
          <br/>
          <%= link_to 'Успеваемость', {action: :view_stat}, {class: 'button_control'} %>
        <% end %>
      </div>
      <div class="userpage__info__who__role">
        <%= if @user.admin? then "Administrator"
            else "User" end %>
      </div>
      <div class="userpage__info__who__group">
        <%= @user.group.title %>
      </div>
      <div class="userpage__info__who__birthday">
        Was born: <time><%= @user.date_of_birth %></time>
      </div>
    </div>
  </div>
  <div class="userpage__info__subscriptions">
    <span class="userpage__info__subscriptions__title">Учебные дисциплины</span>
    <ul class="userpage__info__subscriptions__list">
      <% @disciplines.each do |discipline| %>
      <li class="userpage__info__subscriptions__list__item">
        <%= link_to discipline.name, {controller: :discipline, action: :read, id: discipline.id} %>
      </li>
      <% end %>
      <li class="userpage__info__subscriptions__list__item
        userpage__info__subscriptions__list__item_more">10 more...</li>
    </ul>
  </div>
</div>
