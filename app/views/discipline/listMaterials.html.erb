<div class="entity">

  <h1 class="entity__title">
    Материалы по дисциплине
    <%= link_to @discipline.name, action: :read, id: @discipline.id %>
  </h1>

  <%= link_to 'Загрузить',
    {action: :create, controller: :materials},
    {class: "button_ok"} %>


  <ul class="entity__list">
  <% @discipline.materials.each do |material| %>
    <li class="entity__list__material">
      <%= material.title %>
      <%= link_to 'Download', material.document.url %>
    </li>
  <% end %>
  </ul>
</div>
