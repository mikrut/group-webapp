<div class="entity">

  <h1 class="entity__title">Our disciplines</h1>

  <% if current_user.admin? %>
  <%= link_to 'Создать', {action: :create}, {class: "button_ok"} %>
  <% end %>

  <ul class="entity__list">
  <% @disciplines.each do |discipline| %>
    <li class="entity__list__material">
      <%= render partial: 'small', locals: {discipline: discipline} %>
    </li>
  <% end %>
  </ul>

</div>
