<div class="entity">

<h1 class="entity__title"><%= @group.title %></h1>

<% if current_user.admin? %>
  <%= link_to 'Редактировать', {action: :view_update}, {class: 'button button_ok'} %>
  <%= link_to 'Провести смотр', {action: :create, controller: :report}, {class: 'button_control'} %>
<% end %>

<div class="entity__subtitle">
  <%= @group.faculty_name %>
</div>

<div class="entity__subtitle">
  <%= @group.cathedra_name %>
</div>

<div>
  Куратор: <%= @group.supervisor %><br/>
  Декан: <%= @group.decanus %><br/>
  Зам. декана: <%= @group.zamdecanus %><br/>
</div>

<h2 class="group__subitem">Disciplines</h2>
<div class="group__disciplines"%>
  <% @group.disciplines.each do |discipline| %>
    <div class="group__disciplines__item">
      <%= render partial: 'discipline/smallest', locals: {discipline: discipline} %>
    </div>
  <% end %>
</div>


</div>
