<h1><%= @mat.title %></h1> <%= link_to 'Download', @mat.document.url, class: 'button_ok' %>

<% if current_user == @mat.user then %>
  <%= form_for :material, url: {action: :update}, method: 'POST', html: {autocomplete: 'off'} do |form| %>

    <%= form.label :title %>
    <%= form.text_field :title, value: @mat.title %>

    <%= form.label :description %>
    <%= form.text_field :description, value: @mat.description %>

    <%= form.label :discipline %>
    <%= form.select :discipline_id,
                    options_for_select(
                      Discipline.all.map{|d|[d.name, d.id]}
                        .insert(0, ["None", nil]),
                      @mat.discipline_id
                    ) %>


    <%= form.hidden_field :id, value: @mat.id %>

    <%= form.submit "Update file info" %>
  <% end %>
<% else %>
  <%= @mat.description %>
<% end %>
  <%= @mat.user.name %>
  <%= link_to 'Delete', {action: :delete, id: @mat.id}, class: 'button_red' %>

